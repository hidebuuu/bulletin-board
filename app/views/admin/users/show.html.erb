<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="col-md-6 mx-auto">
        <div class="card">
          <%= image_tag @user.image, class: "card-img-top", alt: "User Avatar" %>
          <div class="card-body">
            <div class="d-flex w-100 justify-content-between">
              <h3 class="mb-1"><%= @user.decorate.full_name %></h3>
              <small>作成日：<%= @user.created_at.strftime("%Y/%m/%d") %></small>
            </div>
            <p><%= @user.email %></p>
            <%= link_to admin_user_path(@user), method: :delete, class: "btn btn-danger float-right", data: { confirm: '本当に消すの？' } do %>
            <i class='fa fa-trash mr10'></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
