<header class="container header-top">
  <div class="row">
    <div class="col-md-12">
      <nav class="navbar navbar-expand-lg  navigation">
        <%= link_to "#" , class: 'nabvar-brand' do %>
          <%= image_tag "sample.jpg" , size:'40x40'%>
        <% end %>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto main-nav ">
            <li class="nav-item active'">
              <%= link_to "Home" , "#" , class: "nav-link" %>
            </li>

            <li class="nav-item dropdown dropdown-slide active">
              <%= link_to "掲示板" , "#" , { class: 'nav-link dropdown-toggle' , data: { toggle: 'dropdown' } , aria: { haspopup:  'true' , expanded: 'false' } } %>
                <span><i class="fa fa-angle-down"></i></span>
              <div class="dropdown-menu dropdown-menu-right">
                <%= link_to "掲示板一覧" , "#" , class: "dropped-item" %>
                <%= link_to "掲示板作成" , "#" , class: "dropdown-item" %>
              </div>
            </li>

            <li class="nav-item dropdown dropdown-slide">
              <%= link_to "フォロー" , "#", { class: 'nav-link dropdown-toggle' , data: { toggle: 'dropdown' } , aria: { haspopup:  'true' , expanded: 'false' } }%>
                <span><i class="fa fa-angle-down"></i></span>
              <div class="dropdown-menu dropdown-menu-right">
                <%= link_to "フォロー一覧" , "#" , class: "dropdown-item" %>
              </div>
            </li>
          </ul>

          <ul class="navbar-nav ml-auto mt-10">            
            <li class="nav-item dropdown dropdown-slide">
              <%= link_to "#" do %>
                <%= image_tag "sample.jpg" , size: '40x40' , class: 'rounded-circle mr15'%>
              <% end %>
              <div class="dropdown-menu dropdown-menu-right">
                <%= link_to "プロフィール編集" , "#" , class: "dropdown-item" %>
              </div>
            </li>

            <li class="nav-item">
              <%= link_to "Logout" , "/logout" , class: 'nav-link login-button', method: :delete %>
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </div>
</header>