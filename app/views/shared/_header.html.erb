<header class="container header-top">
  <div class="row">
    <div class="col-md-12">
      <nav class="navbar navbar-expand-lg  navigation">
        <%= link_to "#" , class: 'nabvar-brand' do %>
          <%= image_tag "sample.jpg" , size:'40x40'%>
        <% end %>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto main-nav ">
            <li class="nav-item active'">
              <%= link_to t('application.home') , root_path , class: "nav-link" %>
            </li>

            <li class="nav-item dropdown dropdown-slide ">
              <%= link_to t('application.bulletin_board') , boards_path , { class: 'nav-link dropdown-toggle' , data: { toggle: 'dropdown' } , aria: { haspopup:  'true' , expanded: 'false' } } %>
                <span><i class="fa fa-angle-down"></i></span>
              <div class="dropdown-menu dropdown-menu-right">
                <%= link_to t('application.bulletin_board_list') , boards_path , class: "dropped-item" %>
                <%= link_to t('application.create_bulletin_board') , new_board_path , class: "dropdown-item" %>
              </div>
            </li>

            <li class="nav-item dropdown dropdown-slide ">
              <%= link_to t('application.follow') , follows_path, { class: 'nav-link dropdown-toggle' , data: { toggle: 'dropdown' } , aria: { haspopup:  'true' , expanded: 'false' } }%>
                <span><i class="fa fa-angle-down"></i></span>
              <div class="dropdown-menu dropdown-menu-right">
                <%= link_to t('application.follow_list') , follows_path , class: "dropdown-item" %>
              </div>
            </li>
          </ul>

          <ul class="navbar-nav ml-auto mt-10">
            <li class="nav-item dropdown dropdown-slide">
              <%= link_to "#" do %>
                <%= image_tag "sample.jpg" , size: '40x40' , class: 'rounded-circle mr15'%>
              <% end %>
              <div class="dropdown-menu dropdown-menu-right">
                <%= link_to t('application.edit_profile') , "#" , class: "dropdown-item" %>
              </div>
            </li>

            <li class="nav-item">
              <%= link_to t('application.logout') , logout_path , class: 'nav-link login-button', method: :delete %>
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </div>
</header>
