<%= form_for @board do |f| %>
  <div class="form-group">
    <%= f.label :title , class:'control-label required' %>
    <%= f.text_field :title , class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description , class:'control-label required' %>
    <%= f.text_field :description , class:"form-control", rows:'10', height: '200px' %>
    </div>
    <div class="form-group choose-file">
      <%= f.file_field :image , class:"form-control-file d-inline mt10" %>
      <div class='mt15'>
        <%= image_tag "sample.jpg" , size:'300x200' , class:'img-responsive' %>
      </div>
    </div>
    <%= f.submit t('boards.new.submit'), class:"btn btn-transparent" %>
  <% end %>