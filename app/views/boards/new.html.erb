<div class="widget personal-info">
  <h3 class="widget-header user">掲示板作成</h3>
  <%= form_for @board do |f| %>
  <div class="form-group">
    <%= f.label :title, "タイトル",class:'control-label required' %>
    <%= f.text_field :title , class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description, "説明文",class:'control-label required' %>
    <%= f.text_field :description , class:"form-control", rows:'10', height: '200px' %>
    </div>
    <div class="form-group choose-file">
      <%= f.file_field :image , class:"form-control-file d-inline mt10" %>
      <div class='mt15'>
        <%= image_tag "sample.jpg" , width: '300' , height: '200' , class:'img-responsive' %>
      </div>
    </div>
    <%= f.submit "送信", class:"btn btn-transparent" %>
  <% end %>
</div>
