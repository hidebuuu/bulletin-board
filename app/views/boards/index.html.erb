
<div class="advance-search">
  <form>
    <div class="row">
      <div class="col-lg-12 col-md-12">
        <div class="block d-flex">
          <input type='text' name='title_or_description_cont' class='form-control mb-2 mr-sm2 mb-sm0 mr5' placeholder=<%= t('.search_word')%> >
          <input type='submit' name='commit' value=<%= t('.search') %> class='btn btn-main'>
        </div>
      </div>
    </div>
  </form>
</div>

<!-- 掲示板一覧 -->
<div class="row mt15">
  <% @boards.each do |board| %>
    <%= render 'shared/board_contents', board: board, follow: current_user.my_follow(board) %>
  <% end %>
</div>

<!-- ページネーション -->
<%= paginate @boards %>
