<div class="container col-md-10 offset-md-1 col-lg-8 offset-lg-2">
  <div class="widget change-password">
    <h3 class="widget-header user">ログイン</h3>
    <%= form_tag login_path, method: :post do %>
      <div class="form-group">
        <%= label_tag :email, "メールアドレス"  %>
        <%= text_field_tag :email, "", class:'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :password, "パスワード"  %>
        <%= password_field_tag :password, "", class:'form-control' %>
      </div>
      <%= submit_tag "ログイン", class:"btn btn-transparent" %>
    <% end %>
  </div>
  <div class='text-center'>
    <%= link_to "新規登録はこちら" , new_user_path , class:'mr15' %>
    <%= link_to "パスワードをお忘れの方はこちら" , "#" %>
  </div>
</div>