<div class="container col-md-10 offset-md-1 col-lg-8 offset-lg-2">
  <div class="widget change-password">
    <h3 class="widget-header user"><%= t('.form_title') %></h3>
    <%= form_tag login_path, method: :post do %>
      <div class="form-group">
        <%= label_tag t('.email') %>
        <%= text_field_tag :email, "", class:'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag t('.password') %>
        <%= password_field_tag :password, "", class:'form-control' %>
      </div>
      <%= submit_tag t('.submit'), class:"btn btn-transparent" %>
    <% end %>
  </div>
  <div class='text-center'>
    <%= link_to t('.new_registration') , new_user_path , class:'mr15' %>
    <%= link_to t('.forget_password') , "#" %>
  </div>
</div>