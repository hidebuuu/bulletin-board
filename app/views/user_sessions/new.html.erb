<div class="container col-md-10 offset-md-1 col-lg-8 offset-lg-2">
  <div class="widget change-password">
    <h3 class="widget-header user">ログイン</h3>
    <%= form_tag('/login', method: :post) do %>
    <form>
      <div class="form-group">
        <label for='email'>メールアドレス</label><br />
        <input type='text' name='email' class='form-control'>
      </div>
      <div class="form-group">
        <label for='password'>パスワード</label><br />
        <input type='password' name='password' class='form-control'>
      </div>
      <input type='submit' value='ログイン' class='btn btn-transparent'>
    </form>
    <% end %>
  </div>
  <div class='text-center'>
    <%= link_to "新規登録はこちら" , "/users/new" , class: 'mr15' %>
    <%= link_to "パスワードをお忘れの方はこちら" , "#" %>
  </div>
</div>